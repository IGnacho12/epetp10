---
import Card1 from "./bentoComponets/Card1.astro";
import Card2 from "./bentoComponets/Card2.astro";
import Card3 from "./bentoComponets/Card3.astro";
import Card4 from "./bentoComponets/Card4.astro";
import Card5 from "./bentoComponets/Card5.astro";
import Card6 from "./bentoComponets/Card6.astro";
---

<div class="max-w-6xl mx-auto p-6 scroll-mt-12" id="Estudiantes">
  <ul
    class="w-full grid grid-cols-10 grid-rows-8 gap-3 p-6 bg-gradient-to-br from-slate-50 to-slate-100 border border-slate-200 shadow-xl rounded-2xl backdrop-blur-sm"
  >
  <!-- Colegio de frente -->
  <Card1 grid="col-span-12 sm:col-span-6 xl:col-span-4 row-span-3 sm:row-span-4 xl:row-span-4" />

  <!-- Alumnos -->
  <Card2 grid="col-span-12 sm:col-span-6 xl:col-span-6 row-span-3 sm:row-span-4 xl:row-span-4" />

  <!-- Randoms -->
  <Card3 grid="col-span-12 sm:col-span-6 xl:col-span-6 row-span-3 sm:row-span-4 xl:row-span-4" />

  <!-- Logo de la epet -->
  <Card4 grid="col-span-12 sm:col-span-6 xl:col-span-4 row-span-3 sm:row-span-4 xl:row-span-4" />

  <!-- Iframe google maps -->
  <Card5 grid="col-span-12 xl:col-span-3 row-span-7  xl:row-span-6" />

  <!-- Otro iframe o contenido -->
  <Card6 grid="col-span-12 sm:col-span-6 xl:col-span-7 row-span-4 sm:row-span-6 xl:row-span-6" />

  </ul>
</div>

<!-- MODALES -->
<div id="img-outside" class="modal">
  <a href="#Estudiantes" class="overlay"></a>
  <div class="modal-content">
    <img src="images/outside_epet.jpg" alt="Outside" />
  </div>
</div>

<div id="img-estudiantes" class="modal">
  <a href="#Estudiantes" class="overlay"></a>
  <div class="modal-content">
    <img src="images/estudiantes.jpg" alt="Estudiantes" />
  </div>
</div>

<div id="img-card" class="modal">
  <a href="#Estudiantes" class="overlay"></a>
  <div class="modal-content">
    <img src="images/img2.jpg" alt="Brand Transformation" />
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.75);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 50;
  }

  .modal:target {
    display: flex;
  }

  .modal-content {
    max-width: 90%;
    max-height: 90%;
    animation: zoomIn 0.3s ease;
  }

  .modal-content img {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
  }

  .overlay {
    position: absolute;
    inset: 0;
    cursor: zoom-out;
  }

  @keyframes zoomIn {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
